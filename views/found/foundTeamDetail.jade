extends ../common/layout
include ../common/foundTeamDetailItem
block title
append style
	link(rel='stylesheet' href='../css/foundTeamDetail.css')
append script
	script(src='../../public/bower/chart.js')
block body
	div.media.big
		div.media-left
			img.media-object(src='../images/team_default_pic.png')
		div.media-body.media-middle
			div.media-heading.row
				span.col-xs-2 胜
				span.col-xs-2.col-xs-offset-2 负
				span.col-xs-2.col-xs-offset-2 平
			div.row
				span.col-xs-2.big 13
				span.col-xs-2.col-xs-offset-2.big 11
				span.col-xs-2.col-xs-offset-2.big 12
			div.media.small.media-bottom
				div.row.media-bottom
					div.col-xs-5
						a.button.a 比赛邀约
					div.col-xs-5.col-xs-offset-1
						a.button.b +关注
	ul.list-group
		li.list-group-item
			h4 蓝影梦之队
		li.list-group-item
			h6 成立于 2012年5月，队员13人，粉丝355人
	div(id='myTabs')
		ul.nav.nav-pills(role="tablist")
			li.active(role='presentation')
				a(href="#active" aria-controls="home" role="tab" data-toggle="tab") 动态
			li(role='presentation')
				a(href="#picture" aria-controls="picture" role="tab" data-toggle="tab") 照片
			li(role='presentation')
				a(href="#teamMate" aria-controls="teamMate" role="tab" data-toggle="tab") 队员
			li.noborder(role='presentation')
				a(href="#reward" aria-controls="reward" role="tab" data-toggle="tab") 战绩
		div.tab-content
			p.gray-line
			div(role='tabpanel' id='active').tab-pane.active
				+Actives()
			div(role='tabpanel' id='picture').tab-pane
				+Picture()
			div(role='tabpanel' id='teamMate').tab-pane
				+TeamMate()
			div(role='tabpanel' id='reward').tab-pane
				+Reward()
	script.





