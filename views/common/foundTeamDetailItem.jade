						img(src="../images/head_default.png", alt="")
					div.col-xs-2
						img(src="../images/head_default.png", alt="")
					div.col-xs-2
						img(src="../images/head_default.png", alt="")
					div.col-xs-2
						img(src="../images/head_default.png", alt="")
					div.col-xs-2
						img(src="../images/head_default.png", alt="")
				div.row
					div.col-xs-2
						span 赵甜
					div.col-xs-2
						span 赵甜
					div.col-xs-2
						span 赵甜
